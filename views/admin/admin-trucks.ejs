      <div class="container">
        <div class="nav-row">
          <div class="nav-content">
            <div class="nav-item">
              <a href="admin-users" class="nav-text">Users</a>
            </div>
            <div class="nav-item">
              <a href="admin-services" class="nav-text">Services</a>
            </div>
            <div class="nav-item">
              <a href="admin-trucks" class="nav-text admin-trucks-active"
                >Trucks</a
              >
            </div>
            <div class="nav-item">
              <a href="admin-articles" class="nav-text">Articles</a>
            </div>
